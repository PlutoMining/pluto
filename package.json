{
  "name": "pluto",
  "version": "3.0.0-beta.0",
  "private": true,
  "description": "Pluto - Open Source Bitcoin Mining Management Platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/PlutoMining/pluto.git"
  },
  "license": "AGPL-3.0",
  "scripts": {
    "changelog": "semantic-release --dry-run",
    "commit": "bash scripts/conventional-commit.sh",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "test:backend": "npm --prefix backend test",
    "test:discovery": "npm --prefix discovery test",
    "test:frontend": "npm --prefix frontend test",
    "test:all": "bash -lc 'npm --prefix backend test & npm --prefix discovery test & npm --prefix frontend test & wait'",
    "test:coverage": "bash -lc 'npm --prefix backend run test:coverage & npm --prefix discovery run test:coverage & npm --prefix frontend run test:coverage & wait'"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "husky": "^9.0.0",
    "semantic-release": "^25.0.2"
  }
}
